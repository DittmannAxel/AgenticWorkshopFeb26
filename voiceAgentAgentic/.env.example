# =============================================================================
# Voice Agent Workshop - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
# =============================================================================

# ---- Voice Live API (required for both Step 1 and Step 2) ----

# Azure Voice Live API endpoint
AZURE_VOICELIVE_ENDPOINT=https://<your-resource>.services.ai.azure.com

# Azure Voice Live API key (not required if USE_TOKEN_CREDENTIAL=true)
AZURE_VOICELIVE_API_KEY=<your-api-key>

# Model deployment name for the realtime model
AZURE_VOICELIVE_MODEL=gpt-realtime

# Voice for Text-to-Speech output
# Browse voices: https://learn.microsoft.com/en-us/azure/ai-services/speech-service/language-support?tabs=tts
AZURE_VOICELIVE_VOICE=de-DE-ConradNeural

# Set to "true" to use Azure CLI / Managed Identity instead of API key
USE_TOKEN_CREDENTIAL=false

# ---- Local Agent Framework (required for Step 2 local) ----

# Azure AI project endpoint (Foundry)
AZURE_AI_PROJECT_ENDPOINT=https://<your-resource>.services.ai.azure.com/api/projects/<project>

# Model deployment name (e.g. gpt-4.1)
AZURE_AI_MODEL_DEPLOYMENT_NAME=gpt-4.1

# Optional fallbacks (used if AZURE_AI_PROJECT_ENDPOINT / AZURE_AI_MODEL_DEPLOYMENT_NAME are not set)
AZURE_EXISTING_AIPROJECT_ENDPOINT=
MODEL_DEPLOYMENT_NAME=

# ---- Azure AI Agent Service (used by other examples) ----

# Azure AI Foundry endpoint (can be the same as AZURE_VOICELIVE_ENDPOINT)
AZURE_AGENT_ENDPOINT=https://<your-resource>.services.ai.azure.com

# Project name from the AI Foundry portal
AZURE_AGENT_PROJECT=<your-project-name>

# Model deployment for the agent (e.g. gpt-4.1)
AZURE_AGENT_MODEL=gpt-4.1
