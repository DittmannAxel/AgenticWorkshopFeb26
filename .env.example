# =============================================================================
# Azure AI Foundry Voice Agent - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
#
# Find your endpoint and project name in the Azure AI Foundry portal:
#   https://ai.azure.com
# =============================================================================

# Azure AI Foundry endpoint (required)
# Format: https://<resource-name>.services.ai.azure.com
AZURE_FOUNDRY_ENDPOINT=https://<your-resource>.services.ai.azure.com

# Your project name from the AI Foundry portal (required)
PROJECT_NAME=<your-project-name>

# Agent model deployment name (required)
# Deploy a model (e.g. gpt-4.1) in the AI Foundry portal under Model Catalog
MODEL_DEPLOYMENT_NAME=gpt-4.1

# Voice Live realtime model deployment (required for Voice Live)
# Example models: gpt-realtime, gpt-4o-realtime-preview
AZURE_VOICELIVE_MODEL=gpt-realtime

# Voice for Text-to-Speech output (optional, default: de-DE-ConradNeural)
# Browse voices: https://learn.microsoft.com/en-us/azure/ai-services/speech-service/language-support?tabs=tts
AZURE_VOICELIVE_VOICE=de-DE-ConradNeural

# Voice Live API version (optional, default: 2025-10-01)
AZURE_VOICELIVE_API_VERSION=2025-10-01

# =============================================================================
# Optional: Voice Live + Agent Integration settings (voiceAgentAgentic/02_agent_tools)
# =============================================================================
# These mirror the keys commonly found in a local `.env`, but values here are
# placeholders (no personal endpoints, ids, or keys).
#
# Voice Live endpoint (same resource as AZURE_FOUNDRY_ENDPOINT, with trailing slash)
AZURE_VOICELIVE_ENDPOINT=https://<your-resource>.services.ai.azure.com/
AZURE_VOICELIVE_PROJECT_NAME=<your-project-name>

# Existing Agent ID (optional; only needed for Agent integration scenarios)
AZURE_VOICELIVE_AGENT_ID=

# Helpful Azure context (optional; used by some scripts/workflows)
AZURE_ENV_NAME=<your-env-name>
AZURE_LOCATION=<azure-region>
AZURE_SUBSCRIPTION_ID=<your-subscription-id>

# Existing AI Project (optional; used by some examples)
AZURE_EXISTING_AIPROJECT_ENDPOINT=https://<your-resource>.services.ai.azure.com/api/projects/<your-project-name>
AZURE_EXISTING_AIPROJECT_RESOURCE_ID=/subscriptions/<sub>/resourceGroups/<rg>/providers/Microsoft.CognitiveServices/accounts/<resource>/projects/<project>

# Azure Developer CLI behavior (optional)
AZD_ALLOW_NON_EMPTY_FOLDER=true

# Authentication (choose one):
#
# Option A (recommended): Azure CLI / Managed Identity
#   Run `az login` locally. In production, use Managed Identity.
#   No additional env vars needed - DefaultAzureCredential handles it.
#
# Option B: API Key
#   Uncomment and set your API key from the Azure portal:
# AZURE_VOICELIVE_API_KEY=<your-api-key>

# Logging verbosity (optional, default: INFO)
LOG_LEVEL=INFO
